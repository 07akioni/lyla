{
  "name": "@lylajs/node",
  "version": "1.15.0",
  "scripts": {
    "check-type": "tsc -p tsconfig.cjs.json --noEmit",
    "build": "rm -rf es lib && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "watch": "tsc -w -p tsconfig.cjs.json",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "es",
    "lib"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "sideEffects": false,
  "dependencies": {
    "@lylajs/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^4.6.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
